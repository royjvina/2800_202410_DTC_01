<% if (transaction) { %>
    <% if (transaction.payee.username == option.user_id.username) { %>
        <option class="text-center" value="<% transaction.payee.username %>" selected><%= transaction.payee.username %></option>
    <% } else { %>
        <option class="text-center" value="<% option.user_id.username %>"><%= option.user_id.username %></option>
    <% } %>
<% } %>