<% if (transaction) { %>
    <% if (transaction.payee.username == option.user_id.username) { %>
        <option class="text-center" value="<%= transaction.payee._id %>" selected><%= transaction.payee.username %></option>
    <% } else { %>
        <option class="text-center" value="<%= option.user_id._id %>"><%= option.user_id.username %></option>
    <% } %>
<% } %>