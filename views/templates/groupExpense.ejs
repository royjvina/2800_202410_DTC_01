<li>
    <a href="/individualExpense?expenseId=<%= expense._id %>" class="m-2 flex flex-row outline outline-2 p-3 rounded-xl">
        <div class="flex flex-col items-center">
            <% let months = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"] %>
            <% let displayedMonth = expense.date.substring(5, 7) %>
            <p><%= months[parseInt(displayedMonth) - 1] %></p>
            <p><%= expense.date.substring(8, 10) %></p>
        </div>
        <% let expenseCategory = expense.categories %>
        <img class="mx-3" src="/images/addGroupIcons<%= expenseCategory %>Black.svg" alt="" height="40" width="40">
        <div>
            <div class="flex flex-row justify-between">
                <p class="font-semibold"><%= expense.name %></p>
            </div>
            <p class="text-sm text-gray-400 leading-3">Paid by: <%= expense.payee %></p>
        </div>
        <div class="flex flex-col ml-auto justify-center">
            <p class="flex font-medium text-xl"><%= expense.total_cost %></p>
        </div>
    </a>
</li>
