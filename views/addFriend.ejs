<%- include('templates/headTags') %>
    <header class="sticky top-0 ">
        <div class="flex flex-row justify-between font-bold p-3 bg-primary items-center text-white h-[60px]">
            <div><a id="cancelAddFriend" href="/home">
                    Cancel
                </a></div>
            <div class="text-lg">Add Friend</div>
            <div class="">
                <button type="submit" form="addFriendForm" id="confirmAddFriend">Done</button>
            </div>
        </div>
    </header>
    <form action="/addFriend" method="post" id="addFriendForm">
        <% if(error) { %>
            <div class="bg-red-600 text-white p-3 text-center">
                This user does not exist, please try again
            </div>
            <% } %>
                <div class="flex flex-col m-5 gap-3">
                    <div class="text-[12px] mb-5">*Please enter either the phone number or email
                    </div>
                    <div class="flex flex-col">
                        <label for="friendPhone">Phone number</label>
                        <input type="tel" id="friendPhone" name="friendPhone"
                            class="border-b p-2 focus:outline-none focus:border-black">
                    </div>
                    <div class="flex flex-col">
                        <label for="friendEmail">Email</label>
                        <input type="email" id="friendEmail" name="friendEmail"
                            class="border-b p-2 focus:outline-none focus:border-black">
                        <span class="text-red-600 hidden" id="emptyEmailPhoneWarning">Please enter an email or phone
                            number to add the friend</span>
                    </div>
                </div>
    </form>

    <script src="/scripts/addFriend.js"></script>
    <%- include('templates/footer') %>