<%- include('templates/header') %>


  <main class="bg-gray-50">
    <div class="max-w-md mx-auto bg-white shadow-xl rounded-lg overflow-hidden h-dvh w-dvw">
      <div class="p-4 flex items-center justify-between shadow border-b">
        <a href="/home" class="text-gray-600 hover:text-gray-800">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </a>
        <h2 class="text-lg font-semibold text-center flex-1">Setting</h2>
      </div>

      <div class="p-4 bg-gray-50">
        <div class="flex items-center mb-4 shadow-sm rounded-xl bg-white px-4">
          <div class="w-16 h-16 rounded-full overflow-hidden flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-user-circle" width="70"
              height="70" viewBox="0 0 24 24" stroke-width="1.5" stroke="#2c3e50" fill="none" stroke-linecap="round"
              stroke-linejoin="round">
              <path stroke="none" d="M0 0h24v24H0z" fill="none" />
              <path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0" />
              <path d="M12 10m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0" />
              <path d="M6.168 18.849a4 4 0 0 1 3.832 -2.849h4a4 4 0 0 1 3.834 2.855" />
            </svg>
          </div>
          <div class="ml-4 flex items-center justify-between flex-auto p-4">
            <div>
              <h3 class="text-lg font-semibold"><%= username %></h3>
              <p class="text-gray-600"><%= phoneNumber %></p>
            </div>
            <div>
              <form action="/logout" method="POST">
                <button type="submit" class="text-blue-600 mt-2 inline-block">LOGOUT</button>
              </form>
            </div>

          </div>
        </div>

        <div class="mb-4">
          <h4 class="font-semibold text-gray-700">Group </h4>
          <ul>
            <li
              class="flex items-center justify-between p-3 bg-white shadow-sm hover:bg-gray-100 rounded-lg mt-2 border-b">
              <span class="text-gray-700">Friends Edit</span>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </li>
            <li
              class="flex items-center justify-between  p-3 bg-white shadow-sm hover:bg-gray-100 rounded-lg mt-2 border-b">
              <span class="text-gray-700">Group activities</span>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </li>
          </ul>
        </div>

        <div>
          <h4 class="font-semibold text-gray-700">Account settings</h4>
          <ul>
            <li
              class="flex items-center justify-between p-3 bg-white shadow-sm hover:bg-gray-100 rounded-lg mt-2 border-b">
              <span class="text-gray-700">Change password</span>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </li>
            <li
              class="flex items-center justify-between p-3 bg-white shadow-sm hover:bg-gray-100  rounded-lg mt-2 border-b">
              <span class="text-gray-700">Set budget</span>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </li>
            <li
              class="flex items-center justify-between p-3 bg-white shadow-sm hover:bg-gray-100  rounded-lg mt-2 border-b">
              <span class="text-gray-700">Notifications</span>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </li>
            <li
              class="flex items-center justify-between p-3 bg-white shadow-sm hover:bg-gray-100  rounded-lg mt-2 border-b">
              <span class="text-gray-700">Display</span>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </li>
            <li
              class="flex items-center justify-between p-3 bg-white shadow-sm hover:bg-gray-100  rounded-lg mt-2 border-b">
              <span class="text-gray-700">Chat</span>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </li>

          </ul>
        </div>
      </div>
    </div>

  </main>

  <%- include('templates/footer') %>