<%- include('templates/header') %>


  <main class="bg-gray-50">
    <div class="max-w-md mx-auto bg-white shadow-xl rounded-lg overflow-hidden h-dvh w-dvw">
      <div class="p-4 flex items-center justify-between shadow border-b">
        <a href="/home" class="text-gray-600 hover:text-gray-800">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </a>
        <h2 class="text-lg font-semibold text-center flex-1">Setting</h2>
      </div>

      <div class="p-4 bg-gray-50 ">
        <div class="flex items-center mb-4 shadow-sm rounded-xl bg-white px-4 border">
          <div class="w-10 h-10 rounded-full overflow-hidden flex items-center justify-center">
            <img id="settingsProfilePic" data-src="<%= profilePic %>" alt="Profile Picture">
          </div>
          <div class="ml-4 flex items-center justify-between flex-auto p-4">
            <div>
              <h3 class="text-lg font-semibold">
                <%= username %>
              </h3>
              <p class="text-gray-600 text-xs">
                <%= email %>
              </p>
              <p class="text-gray-600 text-xs">
                <%= phoneNumber %>
              </p>
            </div>
            <div>
              <form action="/logout" method="POST">
                <button type="submit" class="text-blue-600 mt-2 inline-block">LOGOUT</button>
              </form>
            </div>

          </div>
        </div>

        <div class="mb-4x">
          <h4 class="font-semibold text-gray-700">Personal Finance</h4>

          <div class="flex justify-between mb-4">
            <a href=""
              class="flex items-center p-4 bg-white shadow-sm hover:bg-gray-100 rounded-lg mt-2 border w-1/2 text-pink-700 mr-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-chart-donut-2 mr-3" width="40"
                height="40" viewBox="0 0 24 24" stroke-width="1.0" stroke="#b83280" fill="none" stroke-linecap="round"
                stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                <path d="M12 3v5m4 4h5" />
                <path d="M12 12m-4 0a4 4 0 1 0 8 0a4 4 0 1 0 -8 0" />
                <path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0" />
              </svg>
              <span>Expenses</span>
            </a>



            <a href=""
              class="flex items-center p-4 bg-white shadow-sm hover:bg-gray-100 rounded-lg mt-2 border w-1/2 text-green-700">
              <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-wallet mr-3" width="40"
                height="40" viewBox="0 0 24 24" stroke-width="1.0" stroke="#2f855a" fill="none" stroke-linecap="round"
                stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                <path
                  d="M17 8v-3a1 1 0 0 0 -1 -1h-10a2 2 0 0 0 0 4h12a1 1 0 0 1 1 1v3m0 4v3a1 1 0 0 1 -1 1h-12a2 2 0 0 1 -2 -2v-12" />
                <path d="M20 12v4h-4a2 2 0 0 1 0 -4h4" />
              </svg>
              <span>Budget</span>
            </a>
          </div>

        </div>


        <div>
          <h4 class="font-semibold text-gray-700">Account settings</h4>
          <ul>
            <li
              class="flex items-center justify-between p-3 bg-white shadow-sm hover:bg-gray-100 rounded-lg mt-2 border-b">
              <span class="text-gray-700">Change password</span>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </li>
            <li
              class="flex items-center justify-between p-3 bg-white shadow-sm hover:bg-gray-100  rounded-lg mt-2 border-b">
              <span class="text-gray-700">Edit Profile</span>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </li>
            <li
              class="flex items-center justify-between p-3 bg-white shadow-sm hover:bg-gray-100  rounded-lg mt-2 border-b">
              <span class="text-gray-700">Notifications</span>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </li>
            <li
              class="flex items-center justify-between p-3 bg-white shadow-sm hover:bg-gray-100  rounded-lg mt-2 border-b mb-4">
              <span class="text-gray-700">About us</span>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </li>


          </ul>
        </div>
      </div>
    </div>

  </main>
  <script src="/scripts/settings.js"></script>
  <%- include('templates/footer') %>