<%- include('templates/headTags') %>
<body class = "">
    <div class = 'flex flex-col items-center h-dvh w-dvw'>
        <div id = 'spacer' class = "bg-inherit h-[10%]"></div>
        <div class = "bg-[#6E0924]  max-w-[50%] w-fit h-fit rounded-full">
            <img src="/images/navbarIcons/logo.png" class="mx-auto blur-[0.5px] p-8" id="logo" alt="logo">
        </div>
        <div class = "text-center">
            <h1 class = "text-2xl font-semibold pb-2">PennyWise</h1>
            <h2 class = "text-lg">Welcome to PennyWise!</h2>
            <p class = 'pb-2'>Please register to continue.</p>
        </div>
        <form action = '/submitRegistration' method = "POST" class = "flex flex-col items-center w-full justify-center gap-y-4 text-center">
            <input type = "text" name = "email" class="focus:outline-none mx-auto bg-slate-50 w-1/2 min-w-52 py-4 rounded-lg border-primary border-2 font-semibold shadow-md px-4" placeholder = "Enter your email">
            <input type = "tel" name = "phone" class="focus:outline-none mx-auto bg-slate-50 w-1/2 min-w-52 py-4 rounded-lg border-primary border-2 font-semibold shadow-md px-4" placeholder = "Enter your phone #">
            <input type = "text" name =  "username" class="focus:outline-none mx-auto bg-slate-50 w-1/2 min-w-52 py-4 rounded-lg border-primary border-2 font-semibold shadow-md px-4" placeholder = "Enter your name">
            <input type = "password" name = "password" class="focus:outline-none mx-auto bg-slate-50 w-1/2 min-w-52 py-4 rounded-lg border-primary border-2 font-semibold shadow-md px-4" placeholder = "Enter a password">
            <button type = "submit" id = "register" class="bg-primary mx-auto text-white font-medium w-1/2 text-lg p-2 border-primary border-2 rounded-full shadow-md">Sign Up</button>
        </form>
        <div class = "pt-4 text-center">
            <p class = "">Already have an account? <span onclick = "window.location = '/'" class = 'font-bold cursor-pointer'>Login</span></p>
        </div>
    </div>
<% include('templates/footer') %>
