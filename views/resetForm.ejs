<%- include('templates/headTags') %>
<!-- Reset password form -->
<body class="">
    <div class='flex flex-col items-center h-dvh w-dvw'>
        <div id='spacer' class="bg-inherit h-[10%]"></div>
        <div class="bg-primary max-w-[50%] w-fit h-fit rounded-full my-4">
            <img src="/images/navbarIcons/logo.png" class="mx-auto blur-[0.5px] p-8" id="logo" alt="logo">
        </div>
        <div class="text-center">
            <h1 class="text-2xl font-semibold pb-2">PennyWise</h1>
            <h2 class="text-lg">Reset your password</h2>
            <p class='pb-2'>Please enter a new password below.</p>
            <% if (typeof error !== 'undefined') { %>
                <p class="text-red-400 mx-8 pb-4">
                    Password must be 8-20 characters long, include at least one uppercase letter, one lowercase letter, one number, and one special character.
                </p>
            <% } %>
        </div>
        <form action="/reset/<%= token %>" method="POST" class="flex flex-col items-center w-full justify-center gap-y-4 text-center">
            <input type="password" name="password" class="focus:outline-none mx-auto bg-slate-50 w-1/2 min-w-52 py-4 rounded-lg border-primary border-2 font-semibold shadow-md px-4" placeholder="Enter new password">
            <input type="password" name="confirmPassword" class="focus:outline-none mx-auto bg-slate-50 w-1/2 min-w-52 py-4 rounded-lg border-primary border-2 font-semibold shadow-md px-4" placeholder="Confirm new password">
            <button type="submit" id="reset" class="bg-primary mx-auto text-white font-medium w-1/2 text-lg p-2 border-primary border-2 rounded-full shadow-md">Reset Password</button>
        </form>
    </div>
<% include('templates/footer') %>